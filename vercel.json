{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "functions": {
    "api/*.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "installCommand": "pip install -r api/requirements.txt --no-cache-dir",
  "excludeFiles": [
    "backend/**",
    "api/backend_for_vercel/**",
    "wix-widget/**",
    "wix-integration/**",
    "test_distribution/**",
    ".git/**",
    "*.html",
    "*.css",
    "*.js",
    "heroku-*.exe"
  ]
} 